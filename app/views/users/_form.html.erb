<%= form_with(model: @user, local: true) do |form| %>
 <%= render 'shared/errors', obj: @user%>

  <div class="row justify-content-center ">
  <div class="col-10 shadow p-3 mb-3 bg-info rounded">
    <div class="container">
    
        <div class="field">
        <div class="form-group row" style="font-size: 20px;">
          <%= form.label :nome, class: "col-2 col-form-label text-light "%>
          <div class="col-10">
          <%= form.text_field :nome, class: "form-control shadow rounded" , placeholder: "Inserisci username"%>
          </div>
        </div>
      </div>


        <div class="field">
        <div class="form-group row" style="font-size: 20px;">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.email_field :email,  class: "form-control shadow rounded",placeholder: "Inserisci email" %>
          </div>
        </div>
      </div>

       <div class="field">
        <div class="form-group row" style="font-size: 20px;">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.password_field :password,  class: "form-control shadow rounded",placeholder: "Scegli password" %>
          </div>
        </div>
      </div>

        <div class="actions">
          <div class="form-group row justify-content-center">
            <%= form.submit(@user.new_record? ?  "Registrati" : "Aggiorna profilo", class: "btn btn-outline-light btn-lg") %>
          </div>
        </div>
        
        <% end %>
    </div>
    </div>
    
</div>
<div class="mb-3">
  <div class="form-group row justify-content-center" style="font-size: 15px;">
    <%= link_to '[Torna alla lista degli utenti]', users_path, class: "text-info" %>
  </div>
</div>
