<%= form_with(model: @sensor, local: true) do |form| %>
 <%= render 'shared/errors', obj: @sensor%>

  <div class="row justify-content-center ">
  <div class="col-10 shadow p-3 mb-3 bg-info rounded">
    <div class="container">
    
        <div class="field">
        <div class="form-group row">
          <%= form.label :mac, class: "col-2 col-form-label text-light "%>
          <div class="col-10">
          <%= form.text_field :mac, class: "form-control shadow rounded"%>
          </div>
        </div>
      </div>


        <div class="field">
        <div class="form-group row">
          <%= form.label :url, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_field :url,  class: "form-control shadow rounded"%>
          </div>
        </div>
      </div>

       <div class="field">
        <div class="form-group row">
          <%= form.label :tipo, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_field :tipo,  class: "form-control shadow rounded"%>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="form-group row">
          <%= form.label :latitudine, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_field :latitudine,  class: "form-control shadow rounded"%>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="form-group row">
          <%= form.label :longitudine, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_field :longitudine,  class: "form-control shadow rounded"%>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="form-group row">
          <%= form.label :unit_misura, 'UnitÃ  di misura', class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_field :unit_misura,  class: "form-control shadow rounded"%>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="form-group row">
          <%= form.label :public, 'Pubblico', class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.check_box :public,  class: "form-check-input"%>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="form-group row">
          <%= form.label :downtime_to_alarm, 'Time out di allarme', class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.datetime_select :downtime_to_alarm,  class: "form-control shadow rounded"%>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="form-group row">
          <%= form.label :last_firmware_update, 'Ultimo aggiornamento firmware', class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.date_select :last_firmware_update,  class: "form-control shadow rounded"%>
          </div>
        </div>
      </div>

      <div class="form-group row">
          <%= form.label :sensors_group, 'Gruppo di appartenenza', class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= form.collection_select(:sensors_group_id, SensorsGroup.all, :id, :nome,
             { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
          </div>
      </div>

        <div class="actions">
          <div class="form-group row justify-content-center">
            <%= form.submit(@sensor.new_record? ?  "Crea sensore" : "Modifica sensore", class: "btn btn-outline-light btn-lg") %>
          </div>
        </div>
        
        <% end %>
    </div>
    </div>
    
</div>
<div class="mb-3">
  <div class="form-group row justify-content-center">
    <%= link_to '[Torna alla lista dei sensori]', sensors_path, class: "text-info" %>
  </div>
</div>

