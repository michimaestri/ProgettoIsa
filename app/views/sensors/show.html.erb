<div class="card" style="width: 22rem;">
  <div class="card-body">
    <h5 class="card-title">mac: <%= @sensor.mac%></h5>
    <p class="card-text">url: <%=@sensor.url%></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Tipo: <%= @sensor.tipo%></li>
    <li class="list-group-item">Latitudine: <%= @sensor.latitudine%></li>
    <li class="list-group-item">Longitudine: <%=@sensor.longitudine%></li>
    <li class="list-group-item">Unit√† di misura: <%=@sensor.unit_misura%></li>
    <li class="list-group-item">Timeout di allarme: <%=@sensor.downtime_to_alarm%></li>
    <li class="list-group-item">Ultimo aggiornamento firware <%=@sensor.last_firmware_update%></li>

  </ul>
  <% if logged_in? && user=current_user %>
    <div class="card-body">
      <%= link_to "Edit", edit_sensor_path(@sensor), class: "btn btn-outline-info" %>
      <%= link_to "Delete", sensor_path(@sensor), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  <%end%>
</div>